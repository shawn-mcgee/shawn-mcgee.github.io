---
import Drawer from "@layouts/Drawer.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout>
  <Drawer>

    <div class="flex flex-col w-full h-full justify-center items-center">
      <h1>About</h1>
  
      <span>The projects that make this site possible</span>
      <ul class="flex flex-row gap-0">
        <li class="btn btn-sm btn-ghost ">
          <a href="https://github.com/withastro/astro">Astro</a></li>
        <li class="btn btn-sm btn-ghost ">
          <a href="https://github.com/tailwindlabs/tailwindcss">TailwindCSS</a></li>
        <li class="btn btn-sm btn-ghost ">
          <a href="https://github.com/saadeghi/daisyui">daisyUI</a></li>
        <li class="btn btn-sm btn-ghost ">
          <a href="https://github.com/saadeghi/theme-change">CSS Theme Change</a></li>
        <li class="btn btn-sm btn-ghost ">
          <a href="https://github.com/mdx-js/mdx">MDX</a></li>
        <li class="btn btn-sm btn-ghost ">
          <a href="https://github.com/dzeiocom/lucide-astro" target="_blank">lucide-astro</a></li>
        <li class="btn btn-sm btn-ghost ">
          <a href="https://github.com/expressive-code/expressive-code" target="_blank">Expressive Code</a></li>
      </ul>
    </div>
    
  </Drawer>

</Layout>