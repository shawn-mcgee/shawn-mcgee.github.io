---
import Tag from "@components/Tag.astro"

export type Props = {
  tags: Array<string> | undefined
  class: string
}

const { tags, class: className } = Astro.props
---


<div class:list={[className, "w-full flex flex-row gap-1 px-2 py-1 overflow-x-auto"]}>
  {tags?.map(tag => <Tag {tag}/>)}
</div>